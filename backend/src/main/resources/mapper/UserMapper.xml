<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ceramic.mall.mapper.UserMapper">

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultType="com.ceramic.mall.entity.User">
        SELECT * FROM users
        WHERE username = #{username}
        AND deleted = 0
    </select>

    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultType="com.ceramic.mall.entity.User">
        SELECT * FROM users
        WHERE email = #{email}
        AND deleted = 0
    </select>

</mapper>